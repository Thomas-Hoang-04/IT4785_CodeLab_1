<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="480dp"
                android:layout_height="80dp"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/materialToolbar"
        />
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/app_title" android:textSize="30sp"
                android:textColor="#D9D9D9" android:textStyle="bold"
                android:layout_marginStart="20dp" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
            android:layout_width="386dp"
            android:layout_height="61dp"
            android:text="@string/happy_birthday"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/greetings"
            app:layout_constraintHorizontal_bias="0.168" app:layout_constraintVertical_bias="0.111"
            android:textSize="40sp" android:fontFamily="sans-serif-light" android:gravity="center"
            tools:ignore="TextSizeCheck"/>
    <TextView
            android:text="@string/from_thomas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="214dp"
            android:layout_height="49dp" android:id="@+id/send_person"
            app:layout_constraintHorizontal_bias="0.906" app:layout_constraintVertical_bias="0.956"
            android:textSize="32sp" android:fontFamily="sans-serif-light" android:gravity="center"
            android:textColor="@color/black" tools:ignore="TextSizeCheck"/>
    <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="390dp"
            android:contentDescription="@string/cake_desc"
            android:layout_height="440dp" app:srcCompat="@drawable/cake" android:id="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.607"/>

</androidx.constraintlayout.widget.ConstraintLayout>